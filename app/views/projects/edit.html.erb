<h1>Editar Projeto</h1>

<%= form_with(model: @project, url: project_path(@project), method: :patch) do |form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "erro") %> encontrados:</h2>

      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.text_field :project_id %>
  </div>

  <div class="actions">
    <%= form.submit "Atualizar Projeto" %>
  </div>
<% end %>

<%= link_to 'Voltar para Meus Projetos', projects_path %>
